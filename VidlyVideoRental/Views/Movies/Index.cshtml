@using System.Data.Entity
@model IEnumerable<VidlyVideoRental.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>


<div>
    @Html.ActionLink("New Movie", "MovieForm", null, new { @class = "btn btn-primary" })
</div>
<br/>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Movie
                </th>
                <th>
                    Genre
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var movie in Model)
            {
                <tr>
                    @*<td>@Html.ActionLink(movie.Name, "Details", "Movies", new { Id = movie.Id }, null)</td>*@
                    <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { Id = movie.Id }, null)</td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }


        </tbody>

    </table>
}
else
{
    <p>We currently don't have any customer</p>
}


